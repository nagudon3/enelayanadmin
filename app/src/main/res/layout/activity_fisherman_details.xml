<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".Activity.FishermanDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/fishermanImage"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/fishermanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nazrul"
            android:layout_marginTop="20dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/fishermanPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="01230312312"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/fishermanLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111G992b123c"
            android:layout_marginTop="20dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/fishingArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kota Samarahan"
            android:layout_marginTop="20dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nazrul"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2 years"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Approved"
            android:textSize="17dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_button"
            android:textColor="@color/colorText"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/approveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/corner_button"
            android:textColor="@color/colorText"
            android:layout_alignParentRight="true"
            android:text="Approve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>